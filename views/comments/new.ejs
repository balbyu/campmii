<%- include('../partials/header') %>

<div class="row">
    <h1 class="newCommentForm">New Comment</h1>
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form action="/campgrounds/<%= campground.id %>/comments" method="POST" autocomplete="off">
            <div class="form-group">
                <textarea  rows="5" class="form-control" type="text" name="comment[text]"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    <div class="col-lg-2"></div>
</div>
<%- include('../partials/footer') %>