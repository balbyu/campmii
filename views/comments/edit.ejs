<%- include('../partials/header') %>

    <div class="row">
            <h1 class="editCommentForm" >Edit Comment</h1>
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST" autocomplete="off">
                    <div class="form-group">
                            <textarea rows="5" class="form-control" type="text" name="comment[text]"><%=comment.text%></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                </form>
                <a href="javascript:history.back()">Go Back</a>
            </div>
            <div class="col-lg-2"></div>
        </div>

<%- include('../partials/footer') %>